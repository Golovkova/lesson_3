№ДЗ №5
from functools import reduce
my_set = [i for i in range(100, 1001, 2)]
print("\n", reduce(lambda x,y: x*y, my_set))

№ДЗ №6
from itertools import count
for i in count(3):
    if i > 11:
        break
    else:
        print(i)

from itertools import cycle
c = 0
for el in cycle("345"):
    if c > 5:
        break
    print(el)
    c += 1
    
