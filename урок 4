# ДЗ №2
my_list = [300, 2, 12, 44, 1, 1, 4, 10, 7, 1, 78, 123, 55]
print(my_list)
new_list = [el for el in my_list if el > my_list[el - 1]]
print(new_list)

# ДЗ №3
my_set = [el for el in range(20, 240) if el % 20 == 0 or el % 21 == 0]
print(my_set)

